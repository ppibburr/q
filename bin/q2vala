#!/usr/bin/env ruby
require 'q'
require "q/builder/compilers/vala.rb"

requires = []

f = ARGV.shift
c = ARGV.shift

def vala_file f
  base = File.basename(f)
  dir  = File.dirname(f)
  File.join(dir,"#{base.gsub(/\.q$/,".vala")}")
end

def perform f, reqs=[]
  reqs << f unless reqs.index f

  code = open(f).read
  ast = Q.build(code, f)

  ast.parented nil
  
  ast.requires.each do |req|
    if req.ok?
	  perform req.path, reqs	
    else
  	  puts "RequireError: #{req.source} - #{req.line}, no such file: #{req.path}"
  	  exit 1
	end
  end  
  
  File.open(vala_file(f), "w") do |f| f.puts Q::ValaSourceGenerator.new(ast).compile end
end

perform f, reqs = []

if c == "--compile"
  system "valac #{vs=reqs.uniq.map do |f| vala_file(f) end.join(" ")} #{ARGV.join(" ")}".strip
  system "rm #{vs}"
end
__END__
#if DO
public class Q_MatchData : Object {
  public MatchInfo match_info; 
  
  public bool match (Regex reg, string str) {
    return reg.match(str, 0, out match_info);
  }
  
  public string? fetch (int nth) {
    return match_info.fetch(nth);
  }	 
} 
#endif
